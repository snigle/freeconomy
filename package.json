{
  "name": "freeconomy-cordova",
  "displayName": "FreeconomyCordova",
  "version": "0.0.1",
  "description": "Freeconomy app running with cordova",
  "main": "src/index.ts",
  "scripts": {
    "dev": "cordova run browser -- -l",
    "dev-android": "cordova run android -- -l",
    "android-debug": "cordova run android",
    "build-web": "cordova build --release browser -- --webpack.env.prod",
    "build-android": "cordova build android --release --bundle -- --webpack.env.prod",
    "bundle-android": "cd ./platforms/android ; ./gradlew app:bundleRelease ; cd ../.. ;",
    "release-android": "perl -i -pe 's/(android-versionCode=\")(\\d+)/$1.($2+1)/e' config.xml && yarn build-android",
    "release": "yarn build-web && yarn release-android && yarn bundle-android"
  },
  "keywords": [
    "ecosystem:cordova"
  ],
  "author": "Ludovic Lamarche",
