<?xml version='1.0' encoding='utf-8'?>
<widget android-versionCode="54" id="com.freeconomy" version="2.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <feature name="Whitelist">
        <param name="android-package" value="org.apache.cordova.whitelist.WhitelistPlugin" />
        <param name="onload" value="true" />
    </feature>
    <feature name="GooglePlus">
        <param name="android-package" value="nl.xservices.plugins.GooglePlus" />
        <param name="onload" value="true" />
    </feature>
    <access origin="https://accounts.google.com/*" />
    <feature name="SaveDialog">
        <param name="android-package" value="io.github.amphiluke.SaveDialog" />
    </feature>
    <name>Freeconomy</name>
    <description>
        Freeconomy to manage your economies.
    </description>
    <author email="snigle64@gmail.com" href="http://github.com/snigle">
        Ludovic Lamarche
    </author>
    <icon src="src/img/ic_launcher.png" />
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <allow-intent href="market:*" />
    <preference name="loglevel" value="DEBUG" />
</widget>
